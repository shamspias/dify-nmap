# Nmap Scanner Plugin Configuration
# Copy this file to .env and configure as needed

# Installation Method
INSTALL_METHOD=local

# Debug Configuration (for development)
DEBUG_MODE=false
LOG_LEVEL=INFO

# Security Settings
# Maximum number of concurrent scans
MAX_CONCURRENT_SCANS=5

# Maximum scan timeout in seconds
MAX_SCAN_TIMEOUT=3600

# Rate limiting (scans per minute)
RATE_LIMIT=10

# Credential Storage (optional)
# For privileged scans requiring sudo
# SUDO_PASSWORD=your-sudo-password-here

# Performance Tuning
# Default parallelism for scans
DEFAULT_PARALLELISM=100

# Default timing template (0-5)
DEFAULT_TIMING=3

# Network Configuration
# Interface to use for scanning (leave empty for default)
SCAN_INTERFACE=

# Source IP for scans (leave empty for default)
SOURCE_IP=

# Proxy Configuration (optional)
# HTTP_PROXY=http://proxy.example.com:8080
# SOCKS_PROXY=socks4://proxy.example.com:1080

# Output Configuration
# Save scan results to file
SAVE_RESULTS=false
RESULTS_PATH=./scan_results

# Logging Configuration
LOG_PATH=./logs
LOG_ROTATION=daily
LOG_MAX_SIZE=100M
LOG_RETENTION_DAYS=30

# Feature Flags
ENABLE_OS_DETECTION=true
ENABLE_SERVICE_DETECTION=true
ENABLE_VULNERABILITY_SCANNING=true
ENABLE_SCRIPT_SCANNING=true

# Safety Settings
# Prevent scanning of private networks
BLOCK_PRIVATE_NETWORKS=false

# Prevent scanning of specific networks (comma-separated)
BLOCKED_NETWORKS=127.0.0.0/8,::1

# Maximum ports per scan
MAX_PORTS_PER_SCAN=65535

# Script Safety
# Only allow safe NSE scripts
SAFE_SCRIPTS_ONLY=true

# Blocked NSE script categories
BLOCKED_SCRIPT_CATEGORIES=dos,exploit,brute

# API Configuration (if using external services)
# CVE_DATABASE_API_KEY=your-api-key-here
# SHODAN_API_KEY=your-shodan-key-here

# Notification Settings (optional)
# WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# EMAIL_NOTIFICATIONS=admin@example.com

# Compliance Settings
# Enable audit logging
AUDIT_LOGGING=true

# Require scan authorization
REQUIRE_AUTHORIZATION=false

# Authorization server (if REQUIRE_AUTHORIZATION=true)
# AUTH_SERVER=https://auth.example.com

# Geographic Restrictions
# Block scanning of hosts in specific countries
# BLOCKED_COUNTRIES=CN,RU,KP

# Custom Nmap Path (if not in system PATH)
# NMAP_PATH=/usr/local/bin/nmap

# NSE Scripts Path (if custom location)
# NSE_SCRIPTS_PATH=/usr/share/nmap/scripts

# Development Settings
# Enable verbose output
VERBOSE=false

# Enable debug mode for Nmap
NMAP_DEBUG=false

# Save raw Nmap output
SAVE_RAW_OUTPUT=false